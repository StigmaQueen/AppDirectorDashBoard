<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEdu.Pages.AddDocenteMateriaPage"
             xmlns:local="clr-namespace:AppEdu.ViewModels.DocenteMateriaVM"
             Title="AddDocenteMateriaPage">
    <VerticalStackLayout Padding="10">
        <Label FontSize="Title" Margin="0,10,0,50" Text="Asignar materias"/>
        <Label Text="Docente"/>
            <Picker x:Name="pckDocenteGrupo"/>
        <Label Margin="0,15,0,0" Text="Asignatura"/>
            <Picker x:Name="pckAsignatura"/>

            <StackLayout Orientation="Horizontal" Spacing="5" HorizontalOptions="Center" Margin="0,20,0,0">
            <Button x:Name="btnCancelar" Text="Cancelar" WidthRequest="150" Clicked="btnCancelar_ClickedAsync"/>
            <Button x:Name="btnAgregarDocenteMateria" WidthRequest="150" Text="Agregar" Clicked="btnAgregarDocenteMateria_ClickedAsync"/>
        </StackLayout>

        
    </VerticalStackLayout>
</ContentPage>